include ../../components/ui-kit-components/billboard/billboard
include ../../components/ui-kit-components/datepicker/datepicker
include ../components/header/header
include ../components/menu/menu
include ../components/enroll-form/enroll-form

doctype html
html
  head
    meta(charset = 'utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="description" content="Enroll in a course")
    title Enroll
  body
    +header()
    .page-wrapper
      +menu()
      .page-content
        .enroll
          .enroll__title You can enroll in a course here (starts in February 14th):
          .enroll__content
            .enroll__form
              +enroll-form
            .enroll__billboard
              +billboard({
                type: 'news',
                title: 'JavaScript course',
                imageName: 'javascript',
                content: 'First course starts february 14th!',
                backgroundColor: 'cyan',
                day: '14',
                month: 'november',
                year: '2020'
              })

            .enroll__datepicker
              +datepicker
