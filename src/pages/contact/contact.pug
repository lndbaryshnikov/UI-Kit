extends ../../templates/site-page-template

block page-components
  include ../../components/ui-kit-components/map/map
  include ../../components/ui-kit-components/billboard/billboard
  include ../../components/site-components/contact-info/contact-info

block title
  title Contact

block page-content
  .contact
    .contact__address-billboard
      .contact__address You can find us at Ostrovsky street, 38, Kazan
        +contact-info
      .contact__billboard
        +billboard({
          type: "events",
          title: "first lesson",
          imageName: "course-event",
          content: "First lesson starts in February 14th. Hurry up to sign up!",
          backgroundColor: "cyan",
          day: "14",
          month: "Feb",
          goTo: "./enroll.html"
        })

    .contact__map
      +map([55.785124, 49.121856], 14,
        {
          sign: "Meet us!",
          address: "Ostrovsky Street, 38. Kazan"
        }
      )
