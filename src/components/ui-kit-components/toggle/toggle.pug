mixin toggle(isChecked, { name, value = 'on' } = {})
  label.toggle
    if name
      input(class="toggle__input" type="checkbox" name=name value=value checked=isChecked)
    else
      input(class="toggle__input" type="checkbox" checked=isChecked)

    span.toggle__slider
    div.toggle__sign.toggle__sign_off off
    div.toggle__sign.toggle__sign_on on
