include ../button/button

mixin billboard({ type, title, imageName, content, backgroundColor, day, month, year, goTo })
  .billboard(class=`billboard_background-color_${backgroundColor}`)
    img.billboard__image(
      src=require(`../../assets/images/billboard-images/${imageName}.png`),
      alt=imageName
    )

    .billboard__content
      if type === "news"
        .billboard__title.billboard__title_type_new= title
        .billboard__date.billboard__date_type_new #{day} #{month} #{year}
        .billboard__description= content

      if type === "events"
        .billboard__date.billboard__date_type_event
          .billboard__event-day= day
          .billboard__event-month  #{month}
        .billboard__title.billboard__title_type_event= title
        .billboard__description= content

        if goTo
          form.billboard__button(action=goTo)
            +button({
              size: "small",
              color: "cyan",
              content: "add to calendar",
              width: "hundred-percents",
            })
        else
          .billboard__button
            +button({
              size: "small",
              color: "cyan",
              content: "add to calendar",
              width: "hundred-percents",
            })
