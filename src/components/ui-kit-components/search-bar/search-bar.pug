include ../text-field/text-field

mixin search-bar()
  .search-bar
    form.search-bar__form
      .search-bar__input
        +text-field({
          tagName: "input",
          type: "search",
          name: "search",
          placeholder: "Search",
          blockName: "search-bar"
        })
      button.search-bar__button(type="submit")
