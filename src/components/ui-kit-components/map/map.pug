mixin map([longitude=37.791097, latitude=-122.415073] = [], zoom=14, {sign="Meet us!", address="1259  CALIFORNIA ST San Francisco, CA"} = {})
  div(class="map js-map" style="height: 250px")
    div(
      class="map__map-container js-map__map-container"
      data-longitude=longitude data-latitude=latitude data-zoom=zoom
    )
    .map__footer
      .map__footer-sign= sign
      .map__footer-address= address
      .map__icon
      .map__button.js-map__button

  link(rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css"
    integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ=="
    crossorigin="")
  script(src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"
    integrity="sha512-gZwIG9x3wUXg2hdXF6+rVkLF/0Vi9U8D2Ntg4Ga5I5BZpVkVxlJWbSQtXPSiUTtC0TjtGOmxa1AJPuV0CPthew=="
    crossorigin="")
