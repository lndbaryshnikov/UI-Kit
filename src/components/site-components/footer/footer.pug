include ../../ui-kit-components/search-bar/search-bar
include ../contact-info/contact-info
include ../help-form/help-form

mixin footer({ name = "UI Masters" , theme = "dark-gray", contacts = { linkColor: "white" }, link = { name: "back to ui-kit", href: "./index.html" } } = {})
  .footer(class=`footer_theme_${theme}`)
    .footer__info
      .footer__name= name
      .footer__contacts
        +contact-info(contacts)
    .footer__navigation
      .footer__search-sign search
      .footer__search-bar
        +search-bar

      - var { name, href } = link;

      a.footer__link(href=href)= name

    .footer__message-us
      +help-form
