include ../../ui-kit-components/arrow-button/arrow-button
include ../../ui-kit-components/slider/slider

mixin stages({ title, stages, startFrom, styles: { sliderColor, rangeColor, handleColor } })
  - const stagesJSON = JSON.stringify(stages);

  .stages.js-stages(data-stages=stagesJSON, data-start-from=startFrom)
    .stages__title= title
    .stages__stage.js-stages__stage= stages[startFrom - 1]
    .stages__arrows
      +arrow-button({ direction: 'left' })
      +arrow-button({ direction: 'right' })
    .stages__slider
      +slider({
        min: 1,
        max: stages.length,
        value: startFrom,
        type: 'stages',
        sliderColor,
        rangeColor,
        handleColor,
      })
