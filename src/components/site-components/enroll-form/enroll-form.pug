include ../../ui-kit-components/text-field/text-field
include ../../ui-kit-components/tick-box/tick-box
include ../../ui-kit-components/button/button

mixin enroll-form(extraOptions = [{ isChecked: true, name: 'subscribe', text: 'Subscribe' }, { isChecked: true, name: 'callBack', text: 'Call me back' }])
  form(class="message-form js-message-form" method="post")
    .message-form__data-field_type_input.js-message-form__data-field_type_input
      +text-field({
        tagName: 'input',
        type: 'text',
        name: 'name',
        placeholder: 'Your Name',
        blockName: 'message-form'
      })

    .message-form__data-field_type_input.js-message-form__data-field_type_input
      +text-field({
        tagName: 'input',
        type: 'email',
        name: 'email',
        placeholder: 'Your Email',
        blockName: 'message-form'
      })

    .message-form__data-field_type_textarea
      +text-field({
        tagName: 'textarea',
        name: 'message',
        placeholder: 'Your Message',
        blockName: 'message-form'
      })

    .enroll-form__tick-boxes
      if extraOptions
        each options in extraOptions
          - var { isChecked, name, text } = options;

          .enroll-form__tick-item
            +tick-box(isChecked, { name })
            .enroll-form__tick-sign= text

    .message-form__button
      +button({
        size: 'standard',
        color: 'cyan',
        content: 'submit'
      })
